<div class="container mt-3 bg-light border rounded">
    <div class="d-flex flex-wrap alert-content">
        <!-- earthquake data will append here -->
        {{#each earthquakes}}
            <a class="my-3" style="width:80%;" target="_blank" href="{{url}}">
                {{!-- <img class='' src="assets/images/redLight.png" alt="status" height="15px">   --}}
                <div earthquake-data="{{id}}" class="bd-highlight m-auto">
                    {{!-- convert helper in server.js --}}
                    <span class='col-sm-10 col-md-8 col-lg-10 font-weight-bold dateTime'>{{convert time}}</span>
                    <span class='col-sm-10 col-md-8 col-lg-10 magnitude'>Magnitude: </span> 
                    <span class="font-weight-bold font-weight-bold ">{{mag}}</span>
                    <span class='col-sm-10 col-md-8 col-lg-10 place'>Location: </span>{{place}}
                </div>
            </a>
            <a class='p-2 my-2 col-sm-2 col-md-2 col-lg-2' href=/notes/{{id}}> 
                <span class='btn btn-outline-success mr-sm-2'>Notes</span>
            </a>
        {{/each}}
    </div>
</div>