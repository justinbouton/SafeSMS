        {{/each}}  --}}
    </div>
    <form class="form-inline py-3" name="newMessage" method="post" action="/users/"{{id}}>
        <input class="form-control mr-sm-2" id="" type="text" placeholder="Type response here">
        <button class="btn btn-outline-success my-2 my-sm-0" id="userSendMessage" type="button"
            value="send">Send</button>
    </form>
</div>