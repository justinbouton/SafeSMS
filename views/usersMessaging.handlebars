{{!-- Messaging window --}}
<div class="container mt-3 bg-light border rounded">
    <div class="container mt-3 bg-white border rounded">
        {{!-- Do I need a messaging NAV tab? --}}


        {{!-- user messages align left, date stamp --}}
        {{#each userMessage}}
            {{#if messageAdmin}}
                <h3 id="ownerMessage">{{userId}}</h3>
                <h5 id="ownerMessage">{{messageBody}}</h5>
                <h6 id="ownerMessage">{{created}}</h6>
            {{/if}}
            {{#unless messageAdmin}}
                <h3 id="userMessage">{{userId}}</h3>
                <h5>{{messageBody}}</h5>
                <h6>{{created}}</h6> 
            {{/unless}}
        {{/each}} 

        {{!-- owner messages align right, date stamp --}}
        {{!-- <h3 id="ownerMessage">Test sender<h6 id="ownerMessage">Time/Date Stamp</h6> </h3> --}}
        {{!-- {{#each senderMessage}}
            <h3 id="ownerMessage">{{userId}}</h3>
